{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["src/main/app/*"],
			"@assets/*": ["src/web/assets/*"],
			"@components/*": ["src/web/components/*"],
			"@helpers/*": ["src/web/helpers/*"],
			"@hooks/*": ["src/web/hooks/*"],
			"@middlewares/*": ["src/web/middlewares/*"],
			"@pages/*": ["src/web/pages/*"],
			"@routes/*": ["src/web/routes/*"],
			"@services/*": ["src/web/services/*"],
			"@store/*": ["src/web/store/*"],
			"@slices/*": ["src/web/store/slices/*"],
			"@types/*": ["src/web/types/*"],
			"@utils/*": ["src/web/utils/*"]
		}
	},
	"include": ["src"]
}
